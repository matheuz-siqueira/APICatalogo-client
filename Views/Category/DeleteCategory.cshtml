@model APICatalogo_client.Models.CategoryViewModel 

<h3>Deletar Categoria</h3>

<h4>Confirmar a exclus√£o desta categoria? </h4>

<div>
    <hr>
    <div class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10"> 
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <dd class="col-sm-10"> 
            @Html.DisplayFor(model => model.ImageUrl)
        </dd>
    </div>

    <div class="row">
        <div class="form-group col-md-6" style="padding-top:10px">
            @if(string.IsNullOrEmpty(@Model.ImageUrl))
            {
                <img src="~/images/noimage.png"> 
            }
            else
            {
                <img src="@Model.ImageUrl">
            }
        </div>
    </div>
</div>

<form asp-action="DeleteCategory">
    <input type="hidden" asp-for="Id">
    <div class="form-group" style="padding-top:10px">

    <input type="submit" value="Deletar" class="btn btn-danger">
    <a asp-action="Index" class="btn btn-info">Retornar</a>
    </div>
    
</form>